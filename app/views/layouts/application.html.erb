<!DOCTYPE html>
<html>
  <head>
    <title>Cookbook</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= flash[:error] %>
    <%= notice %>
    <%= alert %>
    <nav>
      <% if user_signed_in? %>
        <span>Ol√° <%= current_user.email %></span>
        <%= link_to 'Sair', nil %>
      <% else %>
        <%= link_to 'Entrar', new_user_session_path %>
      <% end %>
    </nav>
    <%= form_tag(search_recipes_path, method: :get) do %>
     <%= label_tag :q, 'Busca' %>
     <%= text_field_tag :q %>
     <%= submit_tag 'Enviar' %>
    <% end %>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
